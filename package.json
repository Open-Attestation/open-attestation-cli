{
  "name": "@govtechsg/open-attestation-cli",
  "version": "0.0.0-development",
  "description": "",
  "main": "index.ts",
  "types": "dist/types/index.d.ts",
  "bin": {
    "open-attestation": "dist/cjs/index.js",
    "oa": "dist/cjs/index.js"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "npm run clean && npm run build:cjs && npm run build:type",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --project ./tsconfig.prod.json",
    "build:type": "tsc -d --emitDeclarationOnly --outDir dist/types",
    "clean": "rm -rf dist/",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "benchmark:make-certs": "./scripts/makeCerts.sh 20000",
    "benchmark:run": "./scripts/benchmark.sh",
    "benchmark:clean": "rm -rf ./benchmark",
    "benchmark:full": "npm run benchmark:make-certs && npm run benchmark:run && npm run benchmark:clean",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "author": "",
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@commitlint/prompt": "^9.0.1",
    "@ls-age/commitlint-circle": "1.0.0",
    "@semantic-release/exec": "^5.0.0",
    "@types/debug": "4.1.5",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^26.0.3",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.0.14",
    "@types/node-fetch": "^2.5.7",
    "@types/signale": "^1.4.1",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "commitizen": "^4.2.1",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-prettier": "^3.1.4",
    "git-cz": "^4.7.0",
    "jest": "^26.1.0",
    "pkg": "^4.4.9",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "semantic-release": "^17.1.1",
    "tmp": "^0.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@govtechsg/dnsprove": "^2.1.1",
    "@govtechsg/document-store": "^2.0.0",
    "@govtechsg/oa-did-sign": "^1.0.0",
    "@govtechsg/oa-encryption": "^1.3.2",
    "@govtechsg/oa-verify": "^5.1.0",
    "@govtechsg/open-attestation": "^4.0.0",
    "@govtechsg/token-registry": "^2.3.0",
    "ajv": "^6.12.3",
    "chalk": "^4.1.0",
    "debug": "^4.1.1",
    "ethers": "^5.0.8",
    "inquirer": "^7.3.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.1",
    "signale": "^1.4.0",
    "snyk": "^1.364.2",
    "unique-names-generator": "^4.3.1",
    "web3-utils": "^1.2.9",
    "yargs": "^15.4.0"
  },
  "license": "GPL-3.0",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off",
      "jest/prefer-expect-assertions": "off",
      "jest/no-hooks": "off",
      "jest/prefer-strict-equal": "off",
      "array-callback-return": "error"
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "watchPathIgnorePatterns": [
      "<rootDir>/src/__tests__/fixture"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Attestation/open-attestation-cli.git"
  },
  "pkg": {
    "scripts": "dist/**/*.js"
  },
  "snyk": true
}
