{
  "name": "@govtechsg/open-attestation-cli",
  "version": "0.0.0-development",
  "description": "",
  "main": "index.ts",
  "types": "dist/types/index.d.ts",
  "bin": {
    "open-attestation": "dist/cjs/index.js",
    "oa": "dist/cjs/index.js"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "npm run clean && npm run build:cjs && npm run build:type",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --project ./tsconfig.prod.json",
    "build:type": "tsc -d --emitDeclarationOnly --outDir dist/types",
    "clean": "rm -rf dist/",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "benchmark:make-certs": "./scripts/makeCerts.sh 20000",
    "benchmark:run": "./scripts/benchmark.sh",
    "benchmark:clean": "rm -rf ./benchmark",
    "benchmark:full": "npm run benchmark:make-certs && npm run benchmark:run && npm run benchmark:clean"
  },
  "author": "",
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@commitlint/prompt": "8.2.0",
    "@ls-age/commitlint-circle": "1.0.0",
    "@semantic-release/exec": "^5.0.0",
    "@types/debug": "4.1.5",
    "@types/jest": "^24.0.23",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.12.11",
    "@types/node-fetch": "^2.5.3",
    "@types/rimraf": "^2.0.3",
    "@types/signale": "^1.2.1",
    "@types/tmp": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "commitizen": "4.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-prettier": "3.1.1",
    "git-cz": "^3.3.0",
    "jest": "24.9.0",
    "pkg": "^4.4.3",
    "prettier": "^1.19.1",
    "proxyquire": "^2.1.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.31",
    "ts-node": "^8.10.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@govtechsg/document-store": "^1.1.6",
    "@govtechsg/oa-encryption": "^1.3.1",
    "@govtechsg/oa-verify": "^3.3.0",
    "@govtechsg/open-attestation": "3.7.0",
    "@govtechsg/token-registry": "^1.3.0",
    "ajv": "^6.10.2",
    "debug": "^4.1.1",
    "ethereumjs-util": "^6.0.0",
    "ethers": "^4.0.46",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.6.0",
    "signale": "^1.4.0",
    "tmp": "^0.0.33",
    "yargs": "^15.3.1"
  },
  "license": "GPL-3.0",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "jest/prefer-expect-assertions": "off",
      "jest/prefer-strict-equal": "off",
      "array-callback-return": "error"
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "watchPathIgnorePatterns": [
      "<rootDir>/src/__tests__/fixture"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Attestation/open-attestation-cli.git"
  },
  "pkg": {
    "scripts": "dist/**/*.js"
  }
}
